<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/background" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
               android:layout_marginTop="20dp"
                
        android:contentDescription="@string/Logo"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/usuario"
        android:layout_below="@+id/usuario"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:background="@drawable/blanco_btn"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/contrasena"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registrobtn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/pass"
        android:layout_below="@+id/entrarbtn"
        android:layout_marginTop="39dp"
        android:background="@drawable/green_btn"
        android:text="@string/registro"
        android:textColor="#ffffffff"
        android:textSize="8pt" />

    <Button
        android:id="@+id/facebookbtn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/registrobtn"
        android:layout_alignBottom="@+id/registrobtn"
        android:layout_alignRight="@+id/pass"
        android:background="@drawable/facebook_button"
        android:text="@string/facebook"
        android:textColor="#ffffffff"
        android:textSize="8pt" />

    <Button
        android:id="@+id/entrarbtn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/number_btn"
        android:text="@string/entrar"
        android:textColor="#ffffffff"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#ffA00000"
        
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/blanco_btn"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/usuario"
        android:inputType="text"
        android:paddingLeft="10dp" />
    

</RelativeLayout>