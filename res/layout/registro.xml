<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <EditText
        android:id="@+id/user"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:paddingLeft="10dp"
        android:background="@drawable/blanco_btn"
        android:hint="@string/user"
        android:ems="10"
        android:gravity="center_vertical"
        android:textColor="#999999"
        android:inputType="text" />
     <requestFocus />

    <EditText
        android:id="@+id/pss"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/user"
        android:layout_below="@+id/user"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:background="@drawable/blanco_btn"
        android:hint="@string/pss"
        android:ems="10"
        android:gravity="center_vertical"
        android:textColor="#999999"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/pssConf"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/pss"
        android:layout_below="@+id/pss"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:background="@drawable/blanco_btn"
        android:hint="@string/pssConf"
        android:ems="10"
        android:gravity="center_vertical"
        android:textColor="#999999"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/pssConf"
        android:layout_below="@+id/pssConf"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp" 
        android:background="@drawable/blanco_btn"
        android:hint="@string/mail"
        android:ems="10"
        android:gravity="center_vertical"
        android:textColor="#999999"
        android:inputType="text" >

       
    </EditText> 

    <Button
        android:id="@+id/registrobtn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/mail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/green_btn"
        android:text="@string/registrar"
        android:textColor="#ffffffff"
        android:textSize="8pt" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bar_color" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/mayor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15pt" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_toRightOf="@+id/textView1"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>