<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <EditText
        android:id="@+id/cuadroCalc"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/field_calc_bg"
        android:ems="10"
        android:gravity="right"
        android:inputType="number" >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/cuadroCalc"
        android:layout_below="@+id/cuadroCalc"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="7" />

    <Button
        android:id="@+id/button8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/button7"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/button8"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="9" />

    <Button
        android:id="@+id/mas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:textColor="#ffffffff"
        android:background="@drawable/op_btn"
        android:textSize="12pt"
        android:text="+" />

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button7"
        android:layout_below="@+id/button7"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_toRightOf="@+id/button7"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignLeft="@+id/button9"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="6" />

    <Button
        android:id="@+id/menos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignLeft="@+id/mas"
        android:textColor="#ffffffff"
        android:background="@drawable/op_btn"
        android:textSize="12pt"
        android:text="-" />

    <Button
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_toRightOf="@+id/button7"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/button6"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="3" />

    <Button
        android:id="@+id/multi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/menos"
        android:textColor="#ffffffff"
        android:background="@drawable/op_btn"
        android:textSize="12pt"
        android:text="*" />

    <Button
        android:id="@+id/parentI"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="(" />

    <Button
        android:id="@+id/button0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/parentI"
        android:layout_alignBottom="@+id/parentI"
        android:layout_alignLeft="@+id/button2"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="0" />

    <Button
        android:id="@+id/parentD"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button0"
        android:layout_alignBottom="@+id/button0"
        android:layout_alignLeft="@+id/button3"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text=")" />

    <Button
        android:id="@+id/divi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/parentD"
        android:layout_alignBottom="@+id/parentD"
        android:layout_alignLeft="@+id/multi"
        android:textColor="#ffffffff"
        android:background="@drawable/op_btn"
        android:textSize="12pt"
        android:text="/" />

    <Button
        android:id="@+id/erase"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/parentI"
        android:layout_below="@+id/parentI"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff"
        android:background="@drawable/number_btn"
        android:textSize="12pt"
        android:text="C" />

    <Button
        android:id="@+id/delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/erase"
        android:layout_alignBottom="@+id/erase"
        android:layout_toRightOf="@+id/button7"
        android:textColor="#ffffffff"
        android:background="@drawable/erase_btn"
        android:textSize="12pt"
        android:text="CE" />

    <Button
        android:id="@+id/ans"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/parentD"
        android:layout_alignTop="@+id/delete"
        android:background="@drawable/number_btn"
        android:text="Ans"
        android:textColor="#ffffffff"
        android:textSize="9pt" />

    <Button
        android:id="@+id/igual"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/divi"
        android:layout_alignTop="@+id/ans"
        android:background="@drawable/green_btn"
        android:text="="
        android:textColor="#ffffffff"
        android:textSize="12pt" />

</RelativeLayout>